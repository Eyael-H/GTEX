####Install bioconda
#Get Anaconds
  $ wget https://github.com/conda-forge/miniforge/releases/download/25.9.1-0/Miniforge3-25.9.1-0-Linux-x86_64.sh
  $ bash Miniforge3-25.9.1-0-Linux-x86_64.sh
#Initialize conda
   $/home/habtemar/miniforge3/bin/conda init bash
#Restart terminl
  $source ~/.bashrc

#Check if conda is properly installed 
  $conda --version
        conda 25.9.1 (version installed)

#add channlels
  $conda config --add channels defaults
  $conda config --add channels conda-forge
  $conda config --set channel_priority strict
#Confirm installed channels
  $conda config --show channels
            channels:
              - bioconda
              - conda-forge
              - defaults

#Install mamba (more efficient than conda)
   $conda install -n base -c conda-forge mamba
#Confirm installation for mamaba
  $mamba --version
          #2.3.3 -Current version
#To initialize the current bash shell, run:
    $ eval "$(mamba shell hook --shell bash)"
#and then activate or deactivate with:
    $ mamba activate
#To automatically initialize all future (bash) shells, run:
    $ mamba shell init --shell bash --root-prefix=~/.local/share/mamba



###Install vcftools
  $mamba create -n geno_vcf -c bioconda vcftools #the environment is geno_vcf
#Activate environment
  $conda activate geno_vcf
#Confirm vcftools installation
  $vcftools --help

##Install other packages for genotype processing
mamba install -c bioconda plink bcftools samtools



########Install R and R studios on the server (From: https://posit.co/download/rstudio-server/)
#Install base R
sudo apt-get install r-base

#Install R-studios
    #Install gdebi
    sudo apt-get install gdebi-core
    #Download the RStudio Server installer
    wget https://download2.rstudio.org/server/jammy/amd64/rstudio-server-2025.09.2-418-amd64.deb
    #Install the package with gdebi
    sudo gdebi rstudio-server-2025.09.2-418-amd64.deb
    #Verify installation
    sudo systemctl status rstudio-server
    #Enable at boot
    sudo systemctl enable rstudio-server

#*Access RStudio from your browser*#
http://<your-server-ip>:8787 (http://10.136.170.247:8787)
    #Check the serverâ€™s IP
    hostname -I #10.136.170.247









