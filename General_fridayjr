                      nohup /usr/bin/time -v /home/habtemar/miniforge3/envs/Env/bin/TEcount --BAM /mnt/LHDD1/GTEX_Hippocampus/GTEX-117XS-0011-R1b-SM-GJ3PQ.Aligned.sortedByCoord.out.patched.md.bam --GTF /mnt/data2/GTEX/TEcount_test/GTF_files/cleaned_gene_annotation.gtf --TE /mnt/data2/GTEX/TEcount_test/GTF_files/GRCh38_GENCODE_rmsk_TE.gtf \
